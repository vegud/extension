  "description": "Chrome extension which adds subtitle to html5 videos",
  "author": "Stefan Breitenstein",
  "scripts": {
    "eslint": "eslint . --ext .ts",
    "start:chrome": "webpack --browser=chrome --watch",
    "build:chrome": "webpack --browser=chrome --mode=production",
    "start:firefox": "webpack --browser=firefox --watch",
    "build:firefox": "export NODE_ENV=production && webpack --browser=firefox --mode=production",
    "test": "jest --no-cache",
    "version": "node sync-manifest.js && git add src/manifest-chrome.json && git add src/manifest-firefox.json"
  },
  "dependencies": {
