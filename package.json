    "file-loader": "^6.2.0",
    "graphql-tag": "^2.11.0",
    "html-loader": "^1.3.2",
    "jest": "^26.6.3",
    "jest-marbles": "^2.5.1",
    "postcss": "^8.2.0",
    "postcss-loader": "^4.1.0",
