    "jszip": "^3.5.0",
    "luxon": "^1.25.0",
    "rxjs": "^6.6.3",
    "typeface-roboto": "^1.1.13",
    "typeface-rubik": "^1.1.13",
    "uuid": "^8.3.0",
    "vue": "^3.0.6"
  },
  "engine": "node >= 0.10",
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.14.0",
    "@tailwindcss/forms": "^0.2.1",
